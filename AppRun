#! /bin/bash

# Export APPRUN if running from an extracted image
self="$(readlink -f -- $0)"
here="${self%/*}"
APPDIR="${APPDIR:-${here}}"

source "${APPDIR}/sh_cfg"

# Export TCl/Tk
export TCL_LIBRARY="${APPDIR}/usr/share/tcltk/tcl8.5"
export TK_LIBRARY="${APPDIR}/usr/share/tcltk/tk8.5"
export TKPATH="${TK_LIBRARY}"

# Export SSL certificate
export SSL_CERT_FILE="${APPDIR}/opt/_internal/certs.pem"

export LC_ALL=C

export LD_LIBRARY_PATH=${APPDIR}/usr/lib/
export TERMINFO=${APPDIR}

${APPDIR}/usr/bin/infocmp &> /dev/null
if [ $? -ne 0 ]; then
    TERM="xterm"
fi

export TERM=$TERM

# Call the entry point
#! /bin/bash
PYTHONHOME="${APPDIR}/opt/$PY_NAME"  ${APPDIR}/usr/bin/$PY_NAME "${APPDIR}/opt/$PY_NAME/bin/osc-tui" --ascii-logo "$@"
